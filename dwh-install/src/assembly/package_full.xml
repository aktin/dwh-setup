<assembly>
	<id>full</id>
	<!-- Specifies that our binary distribution is a tar.gz package -->
	<formats>
		<format>tar.gz</format>
        <!--zip-->
	</formats>
  
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<!-- Add dependencies for the J2EE server to the /packages directory -->
	<dependencySets>
		<dependencySet>
			<outputDirectory>aktin-dwh-install/packages</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.build.scriptSourceDirectory}</directory>
            <outputDirectory>aktin-dwh-install</outputDirectory>
            <!-- enable resource filtering to replace ${property.names} -->
            <lineEnding>unix</lineEnding>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>aktin-dwh-install</outputDirectory>
            <filtered>false</filtered>
            <!--src/main/resources/i2b2_install/build.properties-->
        </fileSet>
        <fileSet>
            <directory>packages</directory>
            <outputDirectory>aktin-dwh-install/packages</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

</assembly>