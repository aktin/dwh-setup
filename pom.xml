<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	
	<groupId>org.aktin.dwh</groupId>
	<artifactId>server</artifactId>
	<version>0.8Ãƒ-SNAPSHOT</version>
  
	<name>AKTIN : DWH Server</name>
	<description>Installation and updates for the AKTIN DWH Server</description>

	<parent>
		<groupId>org.aktin</groupId>
		<artifactId>aktin</artifactId>
		<version>0.3</version>
	</parent>

	<properties>
		<!-- specifies the package and source version to which the site refers to -->
		<dwhJ2EEVersion>0.7.1</dwhJ2EEVersion>
		<dwhOntologyVersion>0.7</dwhOntologyVersion>
		<releaseRepoUrl>http://www.aktin.org/software/repo</releaseRepoUrl>
		<!-- encoding stuff -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
	
	<scm>
		<developerConnection>scm:git:git@gitlab.uni-oldenburg.de:AKTIN/vagrant-vm.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<modules>
		<module>dwh-install</module>
		<module>dwh-update</module>
		<!--
		TODO fix ccd integration
		<module>aktin-cdd</module>
		-->
	</modules>
	<dependencyManagement>
		<!-- dependency version+scope inherited by child projects -->
		<dependencies>
			<!-- second dependency must be the ontology -->
			<dependency>
			    <groupId>org.aktin</groupId>
			    <artifactId>cda-ontology</artifactId>
			    <version>0.7</version>
			</dependency>
			<dependency>
				<groupId>org.aktin.dwh</groupId>
				<artifactId>dwh-j2ee</artifactId>
				<version>0.7.1</version>
				<type>ear</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>de.sekmi.histream.maven</groupId>
				<artifactId>histream-maven-plugin</artifactId>
				<version>0.9.3</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>dependency-properties</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>