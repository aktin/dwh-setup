<project name="Hive data" basedir=".">

	<property environment="env" />

	<property file="./db.properties" />

	<!-- =================================================================== -->
	<!-- 								INIT 								 -->
	<!-- =================================================================== -->
	<target name="init"  description="Prepare for build">
		<path id="classpath">
			<pathelement location="../postgresql-9.2-1002.jdbc4.jar"/>
		</path>
	</target>

	

	<!-- =================================================================== -->
	<!-- 			DATABASE SETUP TARGETS						 			 -->
	<!-- =================================================================== -->

	<target name="drop_hive" depends="init">
		<sql driver="${db.driver}" url="${db.url}" userid="${db.username}" password="${db.password}" classpathref="classpath" onerror="continue" print="true">
			<transaction src="./scripts/drop_hive_tables.sql" />
		</sql>
	</target>
	
	<target name="update_hive" depends="init">
		<sql driver="${db.driver}" url="${db.url}" userid="${db.username}" password="${db.password}" classpathref="classpath" onerror="continue" print="true">
			<transaction src="./scripts/update_hive_tables.sql" />
		</sql>
	</target>

</project>


