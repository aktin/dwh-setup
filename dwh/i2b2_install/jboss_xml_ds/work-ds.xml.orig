<?xml version="1.0" encoding="UTF-8"?>

<datasources xmlns="http://www.jboss.org/ironjacamar/schema">
    <!-- WorkplaceBootStrapDS  -->
	<datasource jta="false" jndi-name="java:/WorkplaceBootStrapDS" 
		pool-name="WorkplaceBootStrapDS" enabled="true" use-ccm="false">
		<connection-url>@DBURL@@DBNAME@?searchpath=@I2B2HIVEUSER@</connection-url>
		<driver-class>@DBDRIVER@</driver-class>
		<driver>@DBDRIVERJAR@</driver>
		<security>
			<user-name>@I2B2HIVEUSER@</user-name>
			<password>@I2B2HIVEPWD@</password>
		</security>
		<validation>
			<validate-on-match>false</validate-on-match>
			<background-validation>false</background-validation>
		</validation>
		<statement>
			<share-prepared-statements>false</share-prepared-statements>
		</statement>
	</datasource>
<!--WIZARDINSERT-->               
    <!--BOSTONSTART-->
    <!-- Workplace DS for Demo -->
    <datasource jta="false" jndi-name="java:/WorkplaceDemoDS"
		pool-name="WorkplaceDemoDS" enabled="true" use-ccm="false">
		<connection-url>@DBURL@@DBNAME@?searchpath=@I2B2WORKUSER@</connection-url>
		<driver-class>@DBDRIVER@</driver-class>
		<driver>@DBDRIVERJAR@</driver>
		<security>
			<user-name>@I2B2WORKUSER@</user-name>
			<password>@I2B2WORKPWD@</password>
		</security>
		<validation>
			<validate-on-match>false</validate-on-match>
			<background-validation>false</background-validation>
		</validation>
		<statement>
			<share-prepared-statements>false</share-prepared-statements>
		</statement>
	</datasource>	
    <!--BOSTONEND-->
</datasources>
