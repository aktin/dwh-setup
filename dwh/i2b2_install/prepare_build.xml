<project name="AKTIN DWH" basedir=".">
    <scriptdef language="javascript" name="capitalize">
        <attribute name="string" />
        <attribute name="to" />

        var s = new String( attributes.get( "string" ) );
        project.setProperty( attributes.get( "to" ),
                s.toLowerCase().replace( /^.|\s\S/g,
                function(a) { return a.toUpperCase(); }) );
    </scriptdef>
    <scriptdef language="javascript" name="upper">
        <attribute name="string" /> 
        <attribute name="to" />

        project.setProperty( attributes.get( "to" ),
                             attributes.get( "string" ).toUpperCase() );
    </scriptdef>

	<property environment="env" />
    <property name="project.installroot" value="/opt/aktin/temp_install/"/>
    <property name="packages.dir" value="/opt/aktin/packages/"/>
    <property name="log.dir" value="/opt/aktin/logs/ant/"/>

    <property name="project.name" value="demo"/>
    <capitalize string="${project.name}" to="project.cname" />
    <upper string="${project.name}" to="project.uname" />

    <!-- =================================================================== -->
    <!--     Change properties                                               -->
    <!-- =================================================================== -->
    
    <target name="change_properties">
        <!-- <replace file="build.properties" value="" failOnNoReplacements="false"> -->
            <!-- move the install root -->
            <!-- <replacefilter token="ant.installdata.dir=/vagrant/i2b2_install/" value="ant.installdata.dir=${project.installroot}"/>
            <replacefilter token="i2b2.src.dir=/vagrant/i2b2_install/i2b2_src" value="i2b2.src.dir=${project.installroot}/i2b2_src"/>
            <replacefilter token="log.dir=log.dir=/vagrant/logs/ant" value="log.dir=${log.dir}"/>
            <replacefilter token="packages.dir=/vagrant/packages/" value="packages.dir=${packages.dir}"/> -->
        <!-- </replace> -->
        <replaceregexp file="build.properties" match="(ant.installdata.dir=)[/_0-9a-zA-Z]+" replace="\1${project.installroot}" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(i2b2.src.dir=)[/_0-9a-zA-Z]+" replace="\1${project.installroot}/i2b2_src" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(log.dir=log.dir=)[/_0-9a-zA-Z]+" replace="\1${log.dir}" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(packages.dir=)[/_0-9a-zA-Z]+" replace="\1${packages.dir}" flags="g" byline="true"/>

        <replaceregexp file="build.properties" match="(db.project=)[a-zA-Z]+" replace="\1${project.name}" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(db.project.name=)[a-zA-Z]+" replace="\1${project.cname}" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(db.project.uname=i2b2_)[a-zA-Z]+" replace="\1${project.uname}" flags="g" byline="true"/>
        <replaceregexp file="build.properties" match="(db.hive.id=i2b2)[a-zA-Z]+" replace="\1${project.name}" flags="g" byline="true"/>
        
    </target>       
</project>
